# PostgreSQL Database URL
# For local development with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# For Render.com (automatically provided by Render):
# DATABASE_URL=<provided by Render>

# Node environment
NODE_ENV=development

# Local mode - set to true to skip database connection
# Useful for local development when DATABASE_URL points to production
LOCAL_MODE=true

# Admin secret for broadcast messages (generate a random string)
# Used by AdminBroadcast.js to authenticate admin messages
ADMIN_SECRET=your-secret-here-change-this

# Cloudflare TURN Server (for P2P WebRTC relay)
# Get these from Cloudflare dashboard: https://dash.cloudflare.com/ -> Calls -> TURN
CLOUDFLARE_TURN_TOKEN_ID=your_turn_token_id
CLOUDFLARE_TURN_API_TOKEN=your_api_token
